{
  "extends": "@repo/typescript-config/nextjs.json",
  
  "compilerOptions": {
    "baseUrl": ".",
   "paths": {
      "@repo/tailwind-next/*": ["../../packages/tailwind/next/*"],
      "@repo/ui/*": ["../../packages/ui/src/*"],
      "@repo/*": ["../../packages/*"],
      "@/*": ["./app/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
