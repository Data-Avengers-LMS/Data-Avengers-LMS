{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@repo/shadcn-next/*": ["./src/*"],
      "@repo/zod-schemas/*": ["../../common/*"],
      "@repo/zod-schemas/constants/themes": ["../../common/constants/themes.ts"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts",
    "tailwind.config.js",
    "../../common/constants/themes.ts"
  ],
  "exclude": ["node_modules"]
}
