model Token {
  id          Int      @id @default(autoincrement())
  userId      String
  type        TokenType
  value       String   @unique
  expiresAt   DateTime?
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum TokenType {
  EMAIL_VERIFICATION
  LOGIN
  FORGOT_PASSWORD
  TWO_FA
}

model Security {
  id          Int      @id @default(autoincrement())
  userId      String   @unique
  ipAddress   String?
   country     String?
  city        String?
  lastLoginAt DateTime? 
  device      String?
  lastSeen    DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}