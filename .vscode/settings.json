{
  "eslint.experimental.useFlatConfig": true,
  "eslint.validate": [
    "typescript",
    "typescriptreact"
  ],
  "eslint.run": "onType",
  "eslint.enable": true,
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "problems.decorations.enabled": true,
  "errorLens.enabled": true
}