{
  "extends": "@repo/typescript-config/nextjs.json",

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@repo/shadcn-next/*": ["../../packages/shadcn/next/*"],
      "@repo/ui/*": ["../../packages/ui/src/*"],
      "@repo/*": ["../../packages/*"],
      "@theme-provider": ["./app/components/theme-provider"],
      "@/*": ["./app/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "postcss.config.js"]
}
